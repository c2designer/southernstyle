<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/ss_background"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!--header TextView -->
    <TextView
        android:id="@+id/contact_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:text="\nContact Us"
        android:textAlignment="center"
        android:textSize="28dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="336dp"
        android:src="@drawable/static_map" />
    <!--contact details TextView -->
    <TextView
        android:id="@+id/contactTV"
        android:layout_width="match_parent"
        android:layout_height="193dp"
        android:layout_margin="12dp"
        android:background="#F5F5F5"
        android:textAlignment="center"
        android:textStyle="bold"
        android:visibility="visible" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:weightSum="4">

        <Button
            android:id="@+id/facebookButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_toRightOf="@+id/servicesButton"
            android:layout_weight="1"
            android:text="Facebook" />

        <Button
            android:id="@+id/servicesButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_toRightOf="@+id/galleryButton"
            android:layout_weight="1"
            android:text="Services" />

        <Button
            android:id="@+id/galleryButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:text="Gallery" />

        <Button
            android:id="@+id/homeButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/facebookButton"
            android:layout_weight="1"
            android:text="Home" />


    </RelativeLayout>

</LinearLayout>